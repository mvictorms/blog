    <% name ||="Crear" %>
    <h1><%= name %> Art√≠culo</h1>
    
    <%= form_for( @article ) do |f| %>
        <% @article.errors.full_messages.each do |message| %>
             <div class="be-red white top-space">
             * <%= message %>
             </div> 
        <% end %>
        <div class="field">
            <%= f.text_field :title,placeholder:"Titulo",class:"form-control"  %>
        </div>
        <div class="field">
            <%= f.text_area :body, placeholder:"Escriba aqui el articulo",style:"height:250px",class:"form-control" %>
        </div>
        
        <div>
            <%= f.submit "Guardar", class:"btn be-red white large-padding" %>
        </div>
    <% end %> 
